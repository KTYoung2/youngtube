extends base

block content 
    img(src="/" + loggedInUser.avatarUrl, width="100", height="100")
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(name="email", placeholder="email" type="email", required, value=loggedInUser.email)
        input(name="username", type="text", required, placeholder="ID", value=loggedInUser.username)
        input(name="name", type="text", required, placeholder="Name", value=loggedInUser.name)
        input(name="location", type="text", required, placeholder="Location", value=loggedInUser.location)
        input(type="submit", value="Update Profile")
        hr
        a(href="change-password") Change Password &rarr;

